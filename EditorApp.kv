<Display>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, None
            height: '48dp'
            Button:
                text: 'Wavelet'
                on_release: sm.current = 'screen_wavelet'  
            Button:
                text: 'Median'
                on_release: sm.current = 'screen_median'  
            Button:
                text: 'Histogram'
                on_release: sm.current = 'screen_histogram'  
            Button:
                text: 'Profiled'
                on_release: sm.current = 'screen_perfilado'
            Button:
                text: 'Smooth'
                on_release: sm.current = 'screen_smooth'
            Button:
                text: 'Projection'
                on_release: sm.current = 'screen_projection'
            Button:
                text: 'Bilineal'
                on_release: sm.current = 'screen_bilineal'
        ScreenManager:
            id: sm
            ScreenWavelet:
            ScreenMedian:
            ScreenHistograma:
            ScreenPerfilado:
            ScreenSmooth:
            ScreenProjection:
            ScreenBilineal:
<ScreenWavelet>:
    name: 'screen_wavelet'      
    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: path
            height: '30dp'
            size_hint: 1, None
            multiline: False
        TextInput:
            id: scales
            height: '30dp'
            size_hint: 0.2, None
            multiline: False
            text: '1'
        Button:
            on_release: root.ids.imageWavelet.fileName, root.ids.imageWavelet.scales = root.ids.path.text, root.ids.scales.text
            height: '30dp'
            size_hint: 1, None
            text: 'Obtener Transformada Wavelet'
        ImageCanvasWavelet:
            id: imageWavelet
